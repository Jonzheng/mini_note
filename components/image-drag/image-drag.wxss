.item-wrap {
  position: relative;
  z-index: 1;
}

.item-wrap .item-out {
  position: absolute;
  z-index: 1;
  width: 230rpx;
  height: 230rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.item-wrap .item {
  position: relative;
  margin: 5rpx;
  width: 210rpx;
  height: 210rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #EDF0F3;
  border-radius: 8rpx;
}
.item-icon-del{
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 44rpx;
  height: 44rpx;
}

.item-wrap .item-transition {
  transition: transform 0.3s;
}

.item-wrap .item-in {
  transition: transform 0.3s;
}

.item-wrap .zIndex {
  z-index: 2;
}

.item-wrap .cur {
  border-radius: 8rpx;
  transition: initial;
  background: rgba(219, 219, 219, 0.342);
}


.item-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.item-wrap .btn-add {
  width: 80rpx;
  height: 80rpx;
}


/**
* 底部删除
*/

.box-to-delete {
  position: fixed;
  left: 0;
  bottom: -20rpx;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

  width: 750rpx;
  opacity: 0.95;
  background: #EF8970;
  z-index: 1;
}

.an-in {
  height: 230rpx;
  transition: height 0.3s ease-out;
  opacity: 1;
}

.an-out {
  height: 0;
  transition: height 0.1s ease-out;
  opacity: 0;
}

.box-to-delete .txt-delete {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  text-align: center;
}

.box-to-delete .icon-delete {
  width: 36rpx;
  height: 36rpx;
}

.item-reach {
  opacity: 0.98;
}

.upload-status {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.20);
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  line-height: 234rpx;
}

.fail {
  color: red;
}

.temp-ipx{
  background: #EF8970;
  height: 50rpx;
  width: 100%;
}