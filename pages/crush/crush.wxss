.box{
  position: relative;
  width: 750rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  background: rgba(11, 222, 33, 0.1);
}

.box-game{
  position: relative;
  width: 710rpx;
  height: 710rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  background: rgba(111, 22, 11, 0.1);
}

.border-item{
  position: absolute;
  left: 0; top: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 70rpx;
  height: 70rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.9);
  border-radius: 6rpx;
  overflow: visible;
}

.item-transition {
  transition: transform 0.3s;
}

.out-item{
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 64rpx;
  height: 64rpx;
  box-shadow:0px 0px 6rpx rgba(0, 0, 0, 0.8);
  border-radius: 6rpx;
  overflow: visible;
  color: #ffffff;
  transition: transform 1s ease-in;
}

.ani-fade-in{
  transform: rotate(0);
}
.ani-fade-out{
  transform: rotate(-720deg);
}

.out-item text{
  position: absolute;
  left: 0;
  top: 0;
  font-size: 22rpx;
}

.sd-item{
  width: 62rpx;
  height: 62rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 1s ease-in;
}

.bg-on{
  background: #111111;
}
.bg-off{
  background: #bbbbbb;
}
.bor-on{
  border: 1rpx solid rgba(222, 0, 0, 0.9) !important;
}

.sd-on{
  box-shadow:0px 0px 6rpx rgba(0, 0, 0, 0.8) inset;
}
.img-on{
    position: absolute;
    left: 0; top: 0;
    clip-path: polygon(30rpx 30rpx, 32rpx 0, 62rpx 0);
    /* animation: ani-img1 1s ease-in; */
}
.img-off{
    position: absolute;
    left: 0; top: 0;
}

.cur-on{
  /* border: 1px dashed rgba(255, 0, 0, 0.8); */
  box-shadow: 0px 0px 8rpx rgba(255, 0, 0, 0.8);
  animation: ani-on 2s infinite;
}

.out-item .img{
  width: 62rpx;
  height: 62rpx;
  border-radius: 10rpx;
}

@keyframes ani-on {
  50% {
    transform: scale(0.92);
  }
}

@keyframes ani-img1 {
  0% {
    transform: rotate(10deg) scale(1) translate(10rpx, 10rpx);
  }
  100% {
    transform: rotate(145deg) scale(1) translate3D(120rpx, 80rpx, 30rpx);
  }
}